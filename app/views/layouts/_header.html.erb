          <div class="pane news-1">
            <p>Some text</p>
          </div>
          <div class="pane news-2 latest-news">
            <h2 class="block-title">Последние новости</h2>
            <dl>
              <% @feed_yahoo = get_feed("http://finance.yahoo.com/news/?format=rss") %>
              <% @feed_yahoo.entries[1..5].each do |news| %>
                  <dt><%= news.published.strftime("%R") %></dt>
                  <dd><%= news.title %></dd>
              <% end %>
            </dl>
          </div>
          <div class="pane news-3 top-news">
            <h2 class="block-title">Новость дня</h2>
            <h3><a href="<%= @feed_yahoo.entries.first.url %>"><%= @feed_yahoo.entries.first.title %></a></h3>
            <p>
              <%= image_tag @feed_yahoo.entries.first.image, class: 'news-image' %>
              <%=  strip_tags(@feed_yahoo.entries.first.summary.sanitize).html_safe %>
